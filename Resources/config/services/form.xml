<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
		
	<parameters>

		<!-- Collection Form Type -->
		<parameter key="asf_layout.form.type.base_collection.class">ASF\LayoutBundle\Form\Type\BaseCollectionType</parameter>
		
		<!-- Date Picker Form Type -->
		<parameter key="asf_layout.form.type.date_picker.class">ASF\LayoutBundle\Form\Type\DatePickerType</parameter>
		
	</parameters>
	
	<services>

		<!-- Collection Form Type -->
		<service id="asf_layout.form.type.base_collection" class="%asf_layout.form.type.base_collection.class%">
			<tag name="form.type" alias="base_collection" />
		</service>
		
		<!-- Date Picker Form Type -->
		<service id="asf_layout.form.type.date_picker" class="%asf_layout.form.type.date_picker.class%">
			<tag name="form.type" alias="date_picker" />
		</service>

	</services>
	
</container>