<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	
	<parameters>
		<parameter key="asf_layout.twig.extension.badge.class">ASF\LayoutBundle\Twig\Extension\BadgeExtension</parameter>
		<parameter key="asf_layout.twig.extension.label.class">ASF\LayoutBundle\Twig\Extension\LabelExtension</parameter>
		<parameter key="asf_layout.twig.extension.icon.class">ASF\LayoutBundle\Twig\Extension\IconExtension</parameter>
	</parameters>
	 
	<services>
        <service id="asf_layout.twig.extension.label" class="%asf_layout.twig.extension.label.class%">
            <tag name="twig.extension" />
        </service>

        <service id="asf_layout.twig.extension.badge" class="%asf_layout.twig.extension.badge.class%">
            <tag name="twig.extension" />
        </service>
        
        <service id="asf_layout.twig.extension.icon" class="%asf_layout.twig.extension.icon.class%">
            <argument>%asf_layout.assets.twbs.icon_prefix%</argument>
            <argument>%asf_layout.assets.twbs.icon_tag%</argument>
            <tag name="twig.extension" />
        </service>
        
	</services>
	
</container>